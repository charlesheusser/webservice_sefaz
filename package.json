{
  "name": "webservice-sefaz-nfe-cnpj",
  "version": "1.0.0",
  "description": "Webservice robusto, seguro e escalável em Node.js/TypeScript para consulta de NFe via NFeDistribuicaoDFe por CNPJ, com certificado A1 .pfx, suportando ambientes homologação e produção.",
  "main": "dist/src/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "set NODE_OPTIONS=--openssl-legacy-provider && node dist/src/server.js",
    "dev": "set NODE_OPTIONS=--openssl-legacy-provider && ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint \"src/**/*.ts\""
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-validator": "^7.3.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^13.1.2",
    "soap": "^1.0.0",
    "xml-crypto": "^6.0.0",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.13.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
